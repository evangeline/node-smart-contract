{
    "extends": "airbnb-base",
    "rules": {
        "import/no-extraneous-dependencies": 0,
        "arrow-body-style": [2, "as-needed"],
        "no-else-return": 2,
        "comma-dangle": 2,
        "import/named": 2,
        "import/prefer-default-export": 0,
        "indent": [2, 4],
        "no-tabs": 0,
        "block-scoped-var": 2,
        "padded-blocks": 2,
        "no-underscore-dangle": 0,
        "generator-star-spacing": 0,
        "consistent-return": 0,
        "default-case": 0,
        "new-cap" : 0,
        "no-nested-ternary": 0,
        "no-unused-vars": [
            "error",
            {
              "varsIgnorePattern": "should|expect"
            }
          ]
      },
      "plugins": [
        "import"
      ],
      "overrides": [
            {
                "files": ["*.spec.js", "*.spec.jsx"],
                "rules": {
                    "no-unused-expressions": 0
                }
            }
        ]
}